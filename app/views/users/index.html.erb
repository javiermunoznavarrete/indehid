
<p id="notice"><%= notice %></p>
<div class="panel-heading"><h1>Users</h1></div>
<table class="table">
    <thead>
    <tr>
      <th>Photo ||</th>
      <th>Name ||</th>
      <th>Email ||</th>
      <th>Address ||</th>
      <th>City ||</th>
      <th>Phone ||</th>
      <th>Commune ||</th>
      <th>Country ||</th>
      <th>Role ||</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag(user.photo.thumb, class:"img-responsive") if user.photo? %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.city %></td>
        <td><%= user.phone %></td>
        <td><%= user.commune %></td>
        <td><%= user.country %></td>
        <td><%= user.role %></td>
        <td>
          <div class="btn-group btn-group-xs" role="group">
            <%= link_to 'Show', user, class: 'btn btn-default' %>
          </div>
        </td>
        <td>
          <div class="btn-group btn-group-xs" role="group">
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default' %>
          </div>
        </td>
        <td >
          <div class="btn-group btn-group-xs" role="group">
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
<br>
