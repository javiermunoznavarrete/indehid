<p id="notice"><%= notice %></p>
<br>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h1>Properties</h1></div>
  <div class="panel-body">
  </div>

  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Imagen</th>
        <th>Rol</th>
        <th>Direccion</th>
        <th>Valor</th>
        <th>Porcentaje de venta</th>
        <th>Descripcion</th>
        <th>Locacion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.user %></td>
          <td><%= image_tag(property.imagen.thumb, class:"img-responsive")%></td>
          <td><%= property.rol %></td>
          <td><%= property.direccion %></td>
          <td><%= property.valor %></td>
          <td><%= property.porcentaje_de_venta %></td>
          <td><%= property.descripcion %></td>
          <td><%= property.locacion %></td>
          <td><%= property.aproved %></td>
          <td>
          <div class="btn-group btn-group-xs" role="group">
            <%= link_to 'Show', property, class: 'btn btn-default' %>
          </div>
        </td>
        <td>
          <div class="btn-group btn-group-xs" role="group">
          <%= link_to 'Edit', edit_property_path(property), class: 'btn btn-default' %>
          </div>
        </td>
        <td >
          <div class="btn-group btn-group-xs" role="group">
            <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New Property', new_property_path %>
